<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.max.scientificcalculator.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout2">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/title"
        android:layout_width="268dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Scientific Calculator by Loc "
        android:textColor="@android:color/black"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnDel"
        android:layout_alignEnd="@+id/btnDel" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/btnThree"
        android:layout_alignBottom="@+id/btnThree"
        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title" />

    <Button
        android:id="@+id/btnSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="-"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/btnSix"
        android:layout_alignBottom="@+id/btnSix"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_alignStart="@+id/btnAdd" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/btnNine"
        android:layout_alignBottom="@+id/btnNine"
        android:layout_alignLeft="@+id/btnSubtract"
        android:layout_alignStart="@+id/btnSubtract" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="/"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/btnEqual"
        android:layout_alignBottom="@+id/btnEqual"
        android:layout_alignLeft="@+id/btnMultiply"
        android:layout_alignStart="@+id/btnMultiply" />

    <Button
        android:id="@+id/btnDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Del"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/btnNextPrime"
        android:layout_alignBottom="@+id/btnNextPrime"
        android:layout_toRightOf="@+id/btnNextPrime"
        android:layout_toEndOf="@+id/btnNextPrime" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="="
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/btnZero"
        android:layout_alignBottom="@+id/btnZero"
        android:layout_toRightOf="@+id/btnEight"
        android:layout_toEndOf="@+id/btnEight" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/btnTwo"
        android:layout_alignBottom="@+id/btnTwo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_above="@+id/btnFour"
        android:layout_toRightOf="@+id/btnOne"
        android:layout_toEndOf="@+id/btnOne" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_above="@+id/btnSix"
        android:layout_toRightOf="@+id/btnTwo"
        android:layout_toEndOf="@+id/btnTwo" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_above="@+id/btnSeven"
        android:layout_alignLeft="@+id/btnOne"
        android:layout_alignStart="@+id/btnOne" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_above="@+id/btnEight"
        android:layout_toRightOf="@+id/btnFour"
        android:layout_toEndOf="@+id/btnFour" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnFive"
        android:layout_alignBottom="@+id/btnFive"
        android:layout_toEndOf="@+id/btnFive"
        android:layout_toRightOf="@+id/btnFive"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="6"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="7"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/btnEight"
        android:layout_alignBottom="@+id/btnEight"
        android:layout_alignLeft="@+id/btnFour"
        android:layout_alignStart="@+id/btnFour" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="8"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_above="@+id/btnEqual"
        android:layout_toRightOf="@+id/btnSeven"
        android:layout_toEndOf="@+id/btnSeven" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="9"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/btnEight"
        android:layout_alignBottom="@+id/btnEight"
        android:layout_toRightOf="@+id/btnEight"
        android:layout_toEndOf="@+id/btnEight" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_above="@+id/digit"
        android:layout_toRightOf="@+id/btnSeven"
        android:layout_toEndOf="@+id/btnSeven" />

    <EditText
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/digit"
        android:layout_alignStart="@+id/digit" />

    <Button
        android:id="@+id/btnDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="."
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_above="@+id/digit"
        android:layout_toLeftOf="@+id/btnZero"
        android:layout_toStartOf="@+id/btnZero" />

    <EditText
        android:id="@+id/digit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnSine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_above="@+id/btnOne"
        android:layout_alignLeft="@+id/btnOne"
        android:layout_alignStart="@+id/btnOne" />

    <Button
        android:id="@+id/btnCosine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnSine"
        android:layout_alignBottom="@+id/btnSine"
        android:layout_toEndOf="@+id/btnSine"
        android:layout_toRightOf="@+id/btnSine"
        android:text="Cos"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnTangent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnTwo"
        android:layout_toEndOf="@+id/btnCosine"
        android:layout_toRightOf="@+id/btnCosine"
        android:text="Tan"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnArcSine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSine"
        android:layout_alignLeft="@+id/btnSine"
        android:layout_alignStart="@+id/btnSine"
        android:text="Arcsin"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnArcCosine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnArcSine"
        android:layout_toLeftOf="@+id/btnTangent"
        android:layout_toStartOf="@+id/btnTangent"
        android:text="Arccos"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnArcTangent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="arcTan"
        android:layout_above="@+id/btnTangent"
        android:layout_toRightOf="@+id/btnCosine"
        android:layout_toEndOf="@+id/btnCosine"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnExponential"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x^n"
        android:layout_alignBaseline="@+id/btnTangent"
        android:layout_alignBottom="@+id/btnTangent"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_alignStart="@+id/btnAdd"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnFactorization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnArcSine"
        android:layout_alignLeft="@+id/btnArcSine"
        android:layout_alignStart="@+id/btnArcSine"
        android:text="x!"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnNextPrime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P?"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/btnFactorization"
        android:layout_alignBottom="@+id/btnFactorization"
        android:layout_toRightOf="@+id/btnFactorization"
        android:layout_toEndOf="@+id/btnFactorization" />

    <Button
        android:id="@+id/btnPi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnArcTangent"
        android:layout_alignBottom="@+id/btnArcTangent"
        android:layout_alignLeft="@+id/btnExponential"
        android:layout_alignStart="@+id/btnExponential"
        android:text="PI"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@android:color/white"
        android:layout_alignBaseline="@+id/btnDel"
        android:layout_alignBottom="@+id/btnDel"
        android:layout_alignLeft="@+id/btnPi"
        android:layout_alignStart="@+id/btnPi" />

    <TextView
        android:id="@+id/op1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/resultText"
        android:layout_alignStart="@+id/resultText"
        android:layout_below="@+id/btnClear" />

    <TextView
        android:id="@+id/op2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/op1"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/btnFactorization"
        android:layout_toRightOf="@+id/btnFactorization" />

</RelativeLayout>
